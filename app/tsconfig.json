{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "removeComments": true,
    "sourceMap": true
  },
  "include": [
    "*.ts",
    "server/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}